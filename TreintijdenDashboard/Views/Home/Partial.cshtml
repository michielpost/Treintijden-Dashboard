@model List<TreintijdenDashboard.Models.Vertrektijd>
@{
    Layout = "";
}



        <table cellpadding="0" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th width="10%">Tijd</th>
                    <th width="30%">Naar</th>
                    <th width="10%">Spoor</th>
                    <th width="50%"></th>
                </tr>
            <tbody>
                @foreach (var tijd in Model)
            {
                    <tr>
                        <td>@tijd.DisplayTijd @tijd.VertragingTekst</td>
                        <td><b>@tijd.TreinSoort</b> naar @tijd.Eindbestemming</td>
                        <td>@tijd.Vertrekspoor</td>
                        <td>
                            @if (!string.IsNullOrEmpty(tijd.Route))
                            {
                                <text>via @tijd.Route</text>
                            }
                            @if (!string.IsNullOrEmpty(tijd.Route) && !string.IsNullOrEmpty(tijd.Opmerkingen))
                            {
                                <br />
                            }
                            <b>@tijd.Opmerkingen</b>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
 